<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="PinButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/security_pin_keyboard_key</item>
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="button_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="captureDialogStyle" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="EtStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/EtTopPadding</item>
        <item name="android:paddingLeft">@dimen/EtLeftPadding</item>
        <item name="android:paddingRight">@dimen/EtRightPadding</item>
        <item name="android:paddingBottom">@dimen/EtBottomPadding</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/FontSize</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="CustomEtStyle" parent="@style/EtStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- TextView的样式 -->
    <style name="TvStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/FontSize</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!-- 用于提示信息的TextView的样式（单行显示） -->
    <style name="TvTipsStyle" parent="@style/TvStyle">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/gray_text_color</item>
    </style>
    <!-- 标签（文本框前）TextView的样式 -->
    <style name="TvLabelStyle" parent="@style/TvTipsStyle">
        <item name="android:textColor">@color/black_text_main</item>
        <item name="android:gravity">left</item>
    </style>
</resources>
